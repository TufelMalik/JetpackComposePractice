<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tufelmalik.jetpackcomposepractice">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetPackComposePractice"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".view.tweets.TweetsCategoryActivity"
            android:exported="false"
            android:label="@string/title_activity_tweets_category"
            android:theme="@style/Theme.JetPackComposePractice" />
        <activity
            android:name=".view.tweets.TweetsActivity"
            android:exported="true"
            android:label="@string/title_activity_tweets"
            android:theme="@style/Theme.JetPackComposePractice">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SignUpActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.JetPackComposePractice" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.JetPackComposePractice"></activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>